<Window x:Class="NavigatorClient.CodePopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NavigatorClient"
        mc:Ignorable="d"
        Title="CodePopUp" Height="500" Width="600">
  <!-- 
    ///////////////////////////////////////////////////////////////////////////////
    // CodePopUp.xaml.cs - Displays text file source in response to double-click //
    // ver 1.0                                                                   //
    // Jim Fawcett, CSE681 - Software Modeling and Analysis, Fall 2017           //
    ///////////////////////////////////////////////////////////////////////////////
  -->
    <Grid>
    <Border>
      <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <TextBlock x:Name="codeView" FontFamily="consolas" FontSize="18" Padding="15"></TextBlock>
      </ScrollViewer>
    </Border>
    </Grid>
</Window>
